<style>
    footer{
        grid-column: 1/13;
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        background-color: #0B1737;
        font-size: .8em;
    }
    .footerCtn{
        grid-column: 3/11;
        display: grid;
        justify-content: space-between;
        grid-template-columns: auto auto auto auto;
        width: 100%;
        height: auto;
        margin: 100px 0 25px 0;
    }
    .footerCtn div:last-child a{
        list-style-image: none;
    }
    .footerCtn ul{
        list-style-type: none;
        margin: 0 0 0 10px;
        padding: 0;
    }
    .footerCtn #iconLinkz ul{
        margin: 0 0 0 0px;
        padding: 0px;
    }
    .footerCtn a{
        text-decoration: none;
        color: #eee;
        list-style-image: url('list_arrow.svg');
    }
    .footerCtn h2, .footerCtn h3,.footerCtn p{
        margin-bottom: 20px;
    }
    .footerCtn p{
        line-height: 1.67em;
    }
    .footerCtn li{
        line-height: 2.34em;
    }
    .footerCtn li:hover{
        text-decoration: underline;
    }
    .footerCtn p:nth-child(3){
        margin-bottom: 0;
    }
    .quickLinks li{
        width: 40px;
        height: auto;
        float: left;
    }
    #copyright{
        grid-column: 3/11;
        text-align: center;
        padding: 25px 100px 100px 100px;
    }
    #copyright p{
        margin-bottom: 10px;
    }
    #copyright em{
        font-style: normal;
        font-weight: bold;
    }
</style>