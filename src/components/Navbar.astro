<style>
    .cont{
        width: 100%;
        position: absolute;
        top: 0;
        left: 0;
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        font-size: .9em;
    }
    .nav_wrapper{
        grid-column: 3/11;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        padding: 6px 15px 6px 0;
        align-items: center;
    }
    ul {
        list-style-type: none;
    }
    li {
        display: inline-block;
        padding: 12px 15px;
    }
    a {
        width: auto;
        color: #fff;
    }
    nav li:hover{
        text-decoration: underline;
    }
</style>